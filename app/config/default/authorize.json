      "plans": {
        "read":"allow",
        "write":"allow"
      },
      "subscriptions": {
        "read":"allow",
        "write":"allow"
      }
    },
    "client": {
      "index":{
        "read": "allow",
        "logout": "allow"
      },
      "dashboard": {
        "read":"allow"
      },
      "plans": {
        "read":"allow"
      },
      "subscription": {
        "read": [
          "isOwner"
