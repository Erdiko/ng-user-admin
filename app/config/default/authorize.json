{
  "guards":[
    "users",
    "subscriptions",
    "plans",
    "dashboard",
    "index"
  ],
  "policies": {
    "anonymous" : {
      "index":{
        "read":"allow",
        "login": "allow"
      },
      "dashboard":{
        "read":"allow"
      }
    },
    "admin": {
      "index":{
        "read":"allow",
        "logout": "allow"
      },
      "dashboard":{
        "read":"allow"
      },
      "users": {
        "read":"allow",
        "write":"allow"
      },
      "plans": {
        "read":"allow",
        "write":"allow"
      },
      "subscriptions": {
        "read":"allow",
        "write":"allow"
      }
    },
    "client": {
      "index":{
        "read": "allow",
        "logout": "allow"
      },
      "dashboard": {
        "read":"allow"
      },
      "plans": {
        "read":"allow"
      },
      "subscription": {
        "read": [
          "isOwner"
        ],
        "write": [
          "isOwner",
          "isAdmin"
        ]
      }
    }
  }
}
